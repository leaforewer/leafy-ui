{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "target": "ES2022",
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "declaration": true,
    "declarationDir": "dist",
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["@types/web"]
  },
  "include": ["src"]
}
