{
  "name": "@leafy-ui/core",
  "version": "0.5.0",
  "description": "Leafy UI core styles and web components",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "sideEffects": true,
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "style": "./dist/index.css",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./index.css": "./dist/index.css",
    "./style": "./dist/index.css",
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "import": "./dist/components/*.js",
      "default": "./dist/components/*.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "check": "biome check ."
  },
  "peerDependencies": {
    "tailwindcss": ">=4.0.0"
  },
  "dependencies": {
    "lit": "^3.3.1"
  },
  "devDependencies": {
    "@types/web": "^0.0.284",
    "glob": "^11.0.3",
    "tailwindcss": "4.0.0",
    "tsup": "^8.5.0"
  }
}
